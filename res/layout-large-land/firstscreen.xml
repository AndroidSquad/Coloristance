<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <se.androidsquad.coloristance.DrawMap
            android:id="@+id/mapRect"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:rotation="270"
            android:scaleX="5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/room_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/bot_layout"
        android:layout_toRightOf="@+id/top_layout"
        android:background="#000000"
        android:rotation="270" >

        <ImageButton
            android:id="@+id/room"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:contentDescription="@string/room" />

        <ImageButton
            android:id="@+id/right_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/room"
            android:background="@color/blue_light"
            android:clickable="true"
            android:contentDescription="@string/door"
            android:rotation="90"
            android:src="@drawable/ic_door" />

        <ImageButton
            android:id="@+id/top_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/room"
            android:layout_centerHorizontal="true"
            android:background="@color/red_light"
            android:clickable="true"
            android:contentDescription="@string/door"
            android:src="@drawable/ic_door"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/bot_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/room"
            android:layout_centerHorizontal="true"
            android:background="@color/purple_light"
            android:clickable="true"
            android:contentDescription="@string/door"
            android:rotation="180"
            android:src="@drawable/ic_door"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/left_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/room"
            android:background="@color/blue_light"
            android:clickable="true"
            android:contentDescription="@string/door"
            android:rotation="270"
            android:src="@drawable/ic_door"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/key_button_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/key_button_red"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:rotation="90"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/key_orange"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/key_button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/key_button_red"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:rotation="90"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/key_blue"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/key_button_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:rotation="90"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/key_red"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/key_button_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/key_button_red"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:rotation="90"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/key_purple"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/key_button_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/key_button_red"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:rotation="90"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/key_green"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bot_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/red_light" >

        <ImageButton
            android:id="@+id/invKeyMid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/key_empty"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/invKeyLeft"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/invKeyMid"
            android:layout_margin="10dp"
            android:background="@drawable/key_empty"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/invKeyRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/invKeyMid"
            android:layout_margin="10dp"
            android:background="@drawable/key_empty"
            android:clickable="true"
            android:contentDescription="@string/key_desc"
            android:visibility="visible" />
        
                <ImageButton
            android:id="@+id/musicbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:clickable="true"
            android:contentDescription="@string/speaker"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:visibility="visible" />
    </RelativeLayout>
    
    

</RelativeLayout>